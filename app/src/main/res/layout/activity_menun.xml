<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".menu">

    <ImageView
        android:id="@+id/logo_text"
        android:layout_width="280dp"
        android:layout_height="123dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/logo_text" />

    <ImageButton
        android:id="@+id/button_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/proffmini"
        app:layout_constraintEnd_toStartOf="@id/button_neighbours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_text" />

    <ImageButton
        android:id="@+id/button_neighbours"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@id/button_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_profile"
        app:layout_constraintTop_toTopOf="@id/button_profile"
        app:layout_constraintVertical_bias="1.0"
        android:src="@drawable/sosedimini" />

    <!-- использовать sosedimini или sosedimini 2 -->

    <ImageButton
        android:id="@+id/button_chat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_profile"
        app:layout_constraintVertical_bias="0.068"
        android:src="@drawable/news" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/floor_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/or"
        android:text="@string/Back"
        android:textColor="@color/light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chat"
        app:layout_constraintVertical_bias="0.732" />

</androidx.constraintlayout.widget.ConstraintLayout>